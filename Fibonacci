.data
    Mensaje: .asciiz "Ingrese un número para la serie de Fibonacci: "
    espacio: .asciiz " "
    Serie: .asciiz "Numeros fibonacci: "
.text
    main:
    # Imprimir el mensaje de solicitud
    li $v0, 4
    la $a0, Mensaje
    syscall
    
    # Leer el número ingresado
    li $v0, 5
    syscall
    move $s0, $v0  
    
    # Imprimir mensaje con los numeros fibonacci al lado
    li $v0, 4
    la $a0, Serie
    syscall
    
    # Inicializar la serie de Fibonacci
    li $s1, 0   
    li $s2, 1   
    
    # Imprimir los primeros dos números de la serie de Fibonacci
    li $v0, 1
    move $a0, $s1
    syscall
    
    li $v0, 4
    la $a0, espacio
    syscall
    
    li $v0, 1
    move $a0, $s2
    syscall
    
    li $v0, 4
    la $a0, espacio
    syscall
    
    # Calcular y mostrar los números siguientes
    li $t0, 2   
    
bucle:
    add $s3, $s1, $s2
    li $v0, 1
    move $a0, $s3
    syscall
    
    li $v0, 4
    la $a0, espacio
    syscall
    
    move $s1, $s2
    move $s2, $s3
    
    addi $t0, $t0, 1
    bge $t0, $s0, fin
    j bucle

fin:
    # Finalizar el programa
    li $v0, 10
    syscall
